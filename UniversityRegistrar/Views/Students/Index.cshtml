@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;

<h1>Welcome University Registrar Students Page!</h1>

@if (@Model.Count == 0)
{
  <h3>No students have been added yet.</h3>
}
else
{
  <ul>
    @foreach (Student student in Model)
    {
      <li>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId })
      </li>
    }
  </ul>
}

<p>@Html.ActionLink("Add New Student", "Create")</p>
<p>@Html.ActionLink("Go Back Home", "Index", "Home")</p>