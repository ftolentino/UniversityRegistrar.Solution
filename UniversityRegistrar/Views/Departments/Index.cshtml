@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;

<h1>Welcome University Registrar Departments Page!</h1>

@if (@Model.Count == 0)
{
  <h3>No departments have been added yet.</h3>
}
else
{
  <ul>
    @foreach (Department department in Model)
    {
      <li>@Html.ActionLink($"{department.Name}", "Details", new { id = department.DepartmentId })
      </li>
    }
  </ul>
}

<p>@Html.ActionLink("Add New Department", "Create")</p>
<p>@Html.ActionLink("Go Back Home", "Index", "Home")</p>