@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;

<h1>Welcome University Registrar Courses Page!</h1>

@if (@Model.Count == 0)
{
  <h3>No courses have been added yet.</h3>
}
else
{
  <ul>
    @foreach (Course course in Model)
    {
      <li>@Html.ActionLink($"{course.Name}", "Details", new { id = course.CourseId })
      </li>
    }
  </ul>
}

<p>@Html.ActionLink("Add New Course", "Create")</p>
<p>@Html.ActionLink("Go Back Home", "Index", "Home")</p>